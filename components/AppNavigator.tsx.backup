import React, { useState } from 'react';
import { View, Text, TouchableOpacity } from 'react-native';
import { RegisterScreen } from './RegisterScreen';
import { HomeScreen } from './HomeScreen';

export const AppNavigator = () => {
  const [currentScreen, setCurrentScreen] = useState<'home' | 'register'>('home');

  return (
    <View className="flex-1">
      {/* Navigation Tabs */}
      <View className="bg-white shadow-lg">
        <View className="flex-row pt-12 pb-4 px-4">
          <TouchableOpacity
            className={`flex-1 py-3 px-4 mx-2 rounded-xl ${
              currentScreen === 'home' 
                ? 'bg-blue-500' 
                : 'bg-gray-100'
            }`}
            onPress={() => setCurrentScreen('home')}
          >
            <Text className={`text-center font-semibold ${
              currentScreen === 'home' 
                ? 'text-white' 
                : 'text-gray-600'
            }`}>
              🏠 Home
            </Text>
          </TouchableOpacity>
          
          <TouchableOpacity
            className={`flex-1 py-3 px-4 mx-2 rounded-xl ${
              currentScreen === 'register' 
                ? 'bg-blue-500' 
                : 'bg-gray-100'
            }`}
            onPress={() => setCurrentScreen('register')}
          >
            <Text className={`text-center font-semibold ${
              currentScreen === 'register' 
                ? 'text-white' 
                : 'text-gray-600'
            }`}>
              📝 Register
            </Text>
          </TouchableOpacity>
        </View>
      </View>

      {/* Screen Content */}
      {currentScreen === 'home' ? <HomeScreen /> : <RegisterScreen />}
    </View>
  );
};
